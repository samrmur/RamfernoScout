<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:id="@+id/resultTeamRecorded"
        android:text="Here Number"
        android:textSize="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#444040"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/_7sdp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/buttonPlayVideo"
        android:layout_below="@+id/resultTeamRecorded"
        android:layout_alignStart="@+id/resultTeamRecorded"
        android:longClickable="false"
        android:textColor="#fff"
        android:background="@color/colorPrimary" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/buttonDeleteVideo"
        android:layout_alignBottom="@+id/buttonPlayVideo"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/_7sdp"
        android:background="@color/colorPrimary"
        android:textColor="#fff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/blankSpace"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/buttonPlayVideo"
        android:layout_below="@+id/buttonPlayVideo" />
</RelativeLayout>